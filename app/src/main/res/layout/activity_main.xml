<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/textDetect"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Detect Text From Image"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/objectDetect"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Detect Object From Image"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/digitalInk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Recognizing digital ink"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/realtimeObjectDetect"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Realtime object detect"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>